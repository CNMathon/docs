{
  "compilerOptions": {
    "baseUrl": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "checkJs": true,
    "jsx": "preserve",
    "paths": {
      "@components/*": ["components/*"],
      "@data/*": ["data/*"],
      "@assets/*": ["assets/*"],
      "@hooks/*": ["hooks/*"],
      "@locales": ["locales/index.ts"],
      "@atoms": ["atoms/index.ts"],
      "@types/*": ["../@types/*", "../node_modules/@types/*"],
      "@css/*": ["css/*"],
      "@templates/*": ["templates/*"]
    }
  }
}
